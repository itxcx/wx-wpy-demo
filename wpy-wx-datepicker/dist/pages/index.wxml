
  <view class="container">
    
  <view class="panel">
    
      Title
    
    
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__bd">发布时间</view>
          <view class="weui-cell__ft weui-cell__ft_in-access" data-id="1" bindtap="selectPicker">{{getPublish_time}}</view>
        </view>
        <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__bd">截止时间</view>
          <view class="weui-cell__ft weui-cell__ft_in-access" data-id="2" bindtap="selectPicker">{{getEnd_time}}</view>
        </view>
      </view>
    
  </view>

    
  <view class="box" wx-if="{{!$DatePicker$hidden}}">
    <view class="float-layer"/>
    <view class="date-picker-container">
      <view class="weui-flex date-picker-title">
        <view class="placeholder">
          <view class="mini-btn" type="default" size="mini" bindtap="$DatePicker$cancel">取消</view>
        </view>
        <!--< view class="weui-flex__item">
                      <view class="placeholder">{{year}}年{{month}}月{{day}}日 {{hour}}:{{minute}}</view>
                    </view>   -->
        <view class="placeholder placeholder-right">
          <view class="mini-btn" type="default" size="mini" bindtap="$DatePicker$sumbit">确定</view>
        </view>
      </view>
      <picker-view indicator-style="height: 35px; border-top:1px solid #e5e5e5; border-bottom:1px solid #e5e5e5;color: #000;" style="width: 100%; height: 358rpx;background: #fff;color: #000;" value="{{$DatePicker$value}}" bindchange="$DatePicker$bindChangeDate">
        <picker-view-column>
          <view class="year"  wx:for="{{$DatePicker$years}}" wx:key="*this" style="line-height: 35px;height:{{$DatePicker$height}}px">
            <view class="year-spac year-num">{{item}}</view>
            <view class="year-spac year-text">年</view>
          </view>
        </picker-view-column>
        <picker-view-column>
          <view  wx:for="{{$DatePicker$months}}" wx:key="*this" style="line-height: 35px;height:{{$DatePicker$height}}px;margin-left:80rpx;margin-right:77rpx;">
            <view class="year-spac year-num">{{item}}</view>
            <view class="year-spac year-text">月</view>
          </view>
        </picker-view-column>
        <picker-view-column>
          <view class="day" wx:for="{{$DatePicker$getDays}}" wx:key="*this" style="line-height: 35px;height:{{$DatePicker$height}}px;margin-right:120rpx;">
            <view class="year-spac year-num">{{item}}</view>
            <view class="year-spac year-text">日</view>
          </view>
        </picker-view-column>
      </picker-view>
      <picker-view indicator-style="height: 35px;" style="width: 100%; height: 358rpx;bacground: #fff;margin-top: 15rpx;background: #fff; color: #000;" value="{{$DatePicker$value1}}" bindchange="$DatePicker$bindChangeTime">
        <picker-view-column>
          <view wx:for="{{$DatePicker$hours}}" wx:key="*this" style="line-height: 35px;height:{{$DatePicker$height}}px;margin-left:120rpx;">
            <view class="year-spac year-num">{{item}}</view>
            <view class="year-spac year-text">时</view>
          </view>
        </picker-view-column>
        <picker-view-column>
          <view wx:for="{{$DatePicker$minutes}}" wx:key="*this" style="line-height: 35px;height:{{$DatePicker$height}}px;margin-right:120rpx;">
            <view class="year-spac year-num">{{item}}</view>
            <view class="year-spac year-text">分</view>
          </view>
        </picker-view-column>
      </picker-view>
    </view>
  </view>

  </view>