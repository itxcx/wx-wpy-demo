.question .connect .content_rows {
  margin: 0 0 30rpx 90rpx;
  position: relative;
}

.question .connect .content_rows .connect_screen {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.question .connect .content_rows .row {
  margin-top: 30rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  width: 577rpx;
}

.question .connect .content_rows .left,
.question .connect .content_rows .right {
  width: 168rpx;
  height: 108rpx;
  background-color: #e5e5e5;
  border-radius: 17rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.question .connect .content_rows .left image,
.question .connect .content_rows .right image {
  width: 168rpx;
  height: 108rpx;
}
